<%- include ('../partials/_header') %>
		<title>Iniciar sesion</title>
		<link rel="stylesheet" href="/resources/css/styleL.css" />	
	</head>
	<body> 
		<div class="container-fluid">
			<div class="row align-items-stretch row_con">
				<!-- lateral image -->
				<div class="col bg d-none d-lg-block"></div>
				<div
					class="
						col
						row
						justify-content-center
						align-content-center
						m-0
						aside
					"
				>
					<!-- Login content -->
					<div class="contenido">
						<img
							src="https://archive.sdb.org/image/sdb-logo-big.png"
							alt="..."
							width="200"
							class="mb-3 mx-auto d-block"
						/>
						<h2 class="title text-center mb-3">
							Centro Educacional Don Bosco
						</h2>
						<form action ="auth" method="POST">
							<div class="input-group form-group mb-3">
								<input
									type="text"
									class="form-control"
									placeholder="Usuario"
									name="user"
									required
								/>
							</div>
							<div class="input-group form-group mb-3">
								<input
									type="password"
									class="form-control"
									placeholder="Contraseña"
									name="pass"
									required
								/>
							</div>
							<div class="form-group mb-3">
								<input
									type="submit"
									value="Iniciar sesion"
									class="btn btn-danger w-100"
								/>
							</div>
							<!-- Login footer -->
							<div class="my-3">
								¿No tienes tu usuario?
								<a href="/register/checkdocument">Registrate</a>
							</div>
							<!-- End login footer -->
							<a href="/recover"> Recuperar contraseña </a>
						</form>
					</div>
					<!-- End login content --->
				</div>
			</div>
		</div>
		<script src="/resources/ext/SweetAlert2/JsDelivrCDN.js"></script>
		<% if (typeof alert != "undefined") { %>
		<script>
			Swal.fire({
				title: '<%= alertTitle %>',
				text: '<%= alertMessage %>',
				icon: '<%= alertIcon %>',
				showCorfimationButton: ' <%= showConfirmButton %>',
			}).then(() => {
				window.location = '/<%=ruta%>';
			});
		</script>
		<% } %> 
<%- include ('../partials/_footerPrimary') %>
