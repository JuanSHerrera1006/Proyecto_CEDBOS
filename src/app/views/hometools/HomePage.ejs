<%- include ('../partials/_header') %>
		<link rel="stylesheet" href="/resources/css/style.css" />
		<link rel="shortcut icon" href="#">
	</head>
	<body>
		<div class="wrapper">
			<nav class="sidebar">
				<div class="dismiss">
					<i class="fas fa-arrow-left"></i>
				</div>
				<div class="sidebar-header">
					<img
						src="https://archive.sdb.org/image/sdb-logo-big.png"
						alt="..."
						width="80"
						class="rounded mx-auto d-block"
					/>
					<hr />
				</div>
				<ul class="list-unstyled">
					<li>
						<a href="/home">
							<span> <i class="fas fa-home"></i></span>
							Home
						</a>
					</li>
					<li>
						<a class="data-register-dropdown"
							><span> <i class="fas fa-database"> </i> </span
							>Registro de datos</a
						>
						<ul class="list-unstyled data-register-list">
							<li><a href="/Home/student"> Registrar estudiante</a></li>
							<li><a href="/Home/product"> Registrar productos</a></li>
							<% if (admin) { %>
							<li><a href="/Home/grade"> Registrar grados</a></li>
							<li><a href="/Home/foodbasket"> Registrar mercado</a></li>
							<% } %>
						</ul>
					</li>
					<% if (admin) { %>
						<li>
							<a class="data-history-dropdown"
								><span><i class="fas fa-history"></i></span
								>Historial</a
							>
								<ul class="list-unstyled data-history-list">
									<li><a href="/home/productHistory">Historial de productos</a></li>
									<li><a href="/home/foodBasketHistory">Historial de mercado</a></li>
									<li><a href="/home/userHistory">Historial de usuarios</a></li>
									<li><a href="/Home/membersHistory">Historial de miembros</a></li>
									<li><a href="/home/monetaryContribution">Historial de aportes</a></li>
								</ul>
							
						</li>
					<% } %>
                    <% if (admin) { %>
                        <li>
                            <a href="/home/charts"
                                ><span><i class="fas fa-chart-bar"></i></span
                                >Graficas</a
                            >
                        </li>
                    <% } %>
					<li>
						<a href="/logout"
							><span><i class="fas fa-sign-out-alt"></i></span
							>Cerrar Sesión</a
						>
					</li>
				</ul>
			</nav>

			<div class="content">
				<nav
					class="
						navbar navbar-expand-lg
						bg-danger
					"
				>
					<div class="container-fluid">
						<button
							type="button"
							id="sidebarCollapse"
							class="btn btn-danger"
						>
							<span><i class="fas fa-bars"></i></span>
						</button>
					</div>
				</nav>
				<div class="container-fluid">
					<div class="opc m-2 p-2">
						<h1 class="text-center text-black-50"><strong>CENTRO EDUCACIONAL DON BOSCO</strong></h1>
					</div>
					<div class="container-fluid">
						<div class="row">
							<div class="col-lg-6 mt-3">
								<img src="https://alfayomega.es/wp-content/uploads/2021/01/San-Juan-Bosco-23055.jpg" class="d-block w-100 h-100" alt="...">
							</div>
							<div class="col-lg-6 mt-3">	
								<div class="row">
									<div class="col-md-6 mt-2">
										<div class="opc card h-100">
											<div class="card-body">
												<h5 class="card-title">¡Bienvenido!</h5>
												<h6 class="card-subtitle mb-2 text-muted">Aplicativo grupo juvenil</h6>
												<% if (login) { %>
												<p class="card-text">Has iniciado sesion como: <%= name %></p>	
												<% } %>		
												<a href="/logout" class="btn btn-primary">Cerrar sesion</a>
											</div>
											</div>
									</div>
									<div class="col-md-6 mt-2">
										<div class="opc card h-100">
											<div class="card-body">
												<h5 class="card-title">Registra nuevos miembros</h5>
												<h6 class="card-subtitle mb-2 text-muted">Aplicativo grupo juvenil</h6>
												<p class="card-text">Puedes visualizar e ingresar nuevos miembros</p>
												<a href="/Home/student" class="card-link">Registrar</a>
												<a href="/home/userHistory" class="card-link">Visualizar</a>
											</div>
											</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-6 mt-2">
										<div class="opc card h-100">
											<div class="card-body">
												<h5 class="card-title">Visualiza el estado del grupo</h5>
												<h6 class="card-subtitle mb-2 text-muted">Aplicativo grupo juvenil</h6>
												<p class="card-text">Visualiza los datos rapidamente a partir de graficos</p>
												<a href="/home/charts" class="card-link">Visualizar graficas</a>
											</div>
											</div>
									</div>
									<div class="col-md-6 mt-2">
										<div class="opc card h-100">
											<div class="card-body">
												<h5 class="card-title">Crea mercados</h5>
												<h6 class="card-subtitle mb-2 text-muted">Aplicativo grupo juvenil</h6>
												<p class="card-text">Crea y reporta la entrega de mercados</p>
												<a href="/Home/foodbasket" class="card-link">Registrar</a>
												<a href="/home/foodBasketHistory" class="card-link">Visualizar</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>	
			</div>
